# Environment Variables
NODE_ENV=production
PORT=10000

# Database - Use MongoDB Atlas for production
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/friendshipquiz?retryWrites=true&w=majority

# JWT Secret (Generate a strong secret key)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Frontend URL (for CORS) - Your Netlify URL
FRONTEND_URL=https://friendship-quiz-app.netlify.app

# Render Configuration
RENDER_EXTERNAL_HOSTNAME=friendship-quiz-backend.onrender.com

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=12
